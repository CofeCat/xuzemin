<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="@string/map_top"
        android:textSize="14sp"
        android:textColor="#E8E8E8"
        android:gravity="center"
        android:background="@mipmap/dingbu"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.android.jdrd.headcontrol.view.MyView
            android:id="@+id/surfaceview"
            android:layout_centerInParent="true"
            android:layout_width="1580dp"
            android:layout_height="980dp"
            />
        <TextView
            android:id="@+id/bilici"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_above="@+id/imageView"
            android:text="@string/scale"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@null"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@id/imageView"
            android:layout_width="90dp"
            android:layout_height="10dp"
            android:background="@mipmap/biliechi"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="5dp"
            />
        <RelativeLayout
            android:id="@+id/map_right_Ralative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/imgViewmapnRight"
                android:layout_width="53dp"
                android:layout_height="49dp"
                android:layout_toLeftOf="@+id/linearlayout_all"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/you_yc"
                />
            <LinearLayout
                android:id="@+id/linearlayout_all"
                android:layout_width="232dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:background="@mipmap/bg"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearlayout_map"
                    android:layout_width="232dp"
                    android:orientation="vertical"
                    android:background="@mipmap/youlan"
                    android:layout_height="match_parent"
                    >
                    <Button
                        style="@style/MapButton"
                        android:id="@+id/button_pointchooce"
                        android:text="@string/button_pointchooce"
                        />
                    <Button
                        style="@style/MapButton"
                        android:id="@+id/button_pathplan"
                        android:text="@string/button_pathplan"
                        />
                    <Button
                        style="@style/MapButton"
                        android:id="@+id/button_cruise"
                        android:text="@string/button_cruise"
                        />
                    <Button
                        style="@style/MapButton"
                        android:id="@+id/button_return"
                        android:visibility="gone"
                        android:text="@string/button_return"
                        />
                    <Button
                        style="@style/MapButton"
                        android:id="@+id/button_returnback"
                        android:text="@string/button_returnback"
                        />
                    <Button
                        style="@style/MapButton"
                        android:id="@+id/button_setreturn"
                        android:text="@string/button_setreturn"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/relative_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTextView"
                        android:textColor="#E8E8E8"
                        android:text="@string/button_path"/>
                    <Spinner
                        android:id="@+id/spinner_plan"
                        style="@style/MySpiner"
                        />
                    <Spinner
                        android:id="@+id/spinner_plan_cirles"
                        style="@style/MySpiner"
                        />
                    <Button
                        style="@style/MapButton"
                        android:id="@+id/button_execut"
                        android:text="执行路线"
                        />
                    <Button
                        android:id="@+id/button_plan_stop"
                        android:text="@string/button_plan_back"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_plan"
                        android:text="@string/button_plan"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_remove"
                        android:text="@string/button_remove"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/plan_change"
                        style="@style/MapButton"
                        android:text="@string/plan_change"
                        />
                    <Button
                        android:id="@+id/button_plan_back"
                        android:text="@string/back"
                        style="@style/MapButton"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/relative_plan_change"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ListView
                        android:id="@+id/plan_change_list"
                        android:layout_marginTop="25px"
                        android:layout_width="match_parent"
                        android:layout_height="700px"
                        >
                    </ListView>
                    <Button
                        android:id="@+id/button_plan_change_save"
                        android:text="@string/change_save"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_plan_change_back"
                        android:text="@string/back"
                        style="@style/MapButton"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/relative_plan_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTextView"
                        android:textColor="#E8E8E8"
                        android:text="@string/serchtime"/>
                    <Spinner
                        android:id="@+id/serchtime"
                        style="@style/MySpiner"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTextView"
                        android:textColor="#E8E8E8"
                        android:text="@string/scope"/>
                    <Spinner
                        android:id="@+id/scope"
                        style="@style/MySpiner"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTextView"
                        android:textColor="#E8E8E8"
                        android:text="@string/gametime"/>
                    <Spinner
                        android:id="@+id/gametime"
                        style="@style/MySpiner"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="96dp">
                        <EditText
                            android:id="@+id/point_x"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            />
                        <EditText
                            android:id="@+id/point_y"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/button_choose"
                        android:text="@string/button_choose"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_clearlast"
                        android:text="@string/button_clearlast"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_saveall"
                        android:text="@string/button_saveall"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_clearall"
                        android:text="@string/button_clearall"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_plan_info_back"
                        android:text="@string/back"
                        style="@style/MapButton"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayout_point"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTextView"
                        android:textSize="25sp"
                        android:textColor="#E8E8E8"
                        android:text="@string/button_point"/>
                    <Button
                        android:id="@+id/button_next"
                        android:text="@string/move"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_point_stop"
                        android:text="@string/point_stop"
                        style="@style/MapButton"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="96dp">
                        <EditText
                            android:id="@+id/go_point_x"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            />
                        <EditText
                            android:id="@+id/go_point_y"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/go_button_choose"
                        android:text="@string/button_choose"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_point_back"
                        android:text="@string/back"
                        style="@style/MapButton"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayout_roam"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/button_roam_start"
                        android:text="@string/roam_start"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_roam_stop"
                        android:text="@string/roam_stop"
                        style="@style/MapButton"
                        />
                    <Button
                        android:id="@+id/button_roam_back"
                        android:text="@string/back"
                        style="@style/MapButton"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
