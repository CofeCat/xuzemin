<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ll_right_bar1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/imgViewBtnRight"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_toLeftOf="@+id/ll_right_bar"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/you_yc"
            />

        <LinearLayout
            android:id="@+id/ll_right_bar"
            android:layout_width="234px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@mipmap/zuolan"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Battery_Level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/bar_right_text_marginTop01"
                android:text="剩余100%电量"
                android:gravity="center|center_horizontal"
                android:textColor="#E8E8E8"
                android:textSize="27px" />

            <TextView
                android:id="@+id/tv_Battery_runTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/bar_right_text_marginTop02"
                android:text="可运行10个小时"
                android:textColor="#E8E8E8"
                android:gravity="center|center_horizontal"
                android:textSize="@dimen/bar_right_text_size" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="20dp"
                android:orientation="vertical">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/btn_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/tuichu_pre"
                    android:gravity="center_vertical|bottom"
                    />
                </RelativeLayout>
