<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context="com.android.jdrd.robot.activity.MainActivity">
    <RelativeLayout
        android:id="@+id/main"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">
        <Button
            android:id="@+id/setting_back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back_selector"
            android:layout_centerVertical="true"
            android:layout_width="17dp"
            android:layout_height="32dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="@string/robot_state_"
            />
        <Button
            android:id="@+id/setting_redact"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_settings_selector"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/name"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/ip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/ip"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">

                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/outline"
                    android:id="@+id/textView3" />

                <TextView
                    android:id="@+id/outline"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/electric"/>
                <TextView
                    android:id="@+id/electric"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/area"/>
                <TextView
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/state"/>
                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/robot_state"/>
                <TextView
                    android:id="@+id/robot_state"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/command_num"/>
                <TextView
                    android:id="@+id/command_num"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/excute_command"/>
                <TextView
                    android:id="@+id/excute_command"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/excute_time"/>
                <TextView
                    android:id="@+id/excute_time"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:visibility="gone"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/command_state"/>
                <TextView
                    android:id="@+id/command_state"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:visibility="gone"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/last_command_state"/>
                <TextView
                    android:id="@+id/last_command_state"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/last_location"/>
                <TextView
                    android:id="@+id/last_location"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height">
                <TextView
                    android:layout_width="120dp"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="@string/obstacle"/>
                <TextView
                    android:id="@+id/obstacle"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/robot_size"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="0.5dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
