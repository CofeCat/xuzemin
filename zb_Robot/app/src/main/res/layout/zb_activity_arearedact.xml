<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EDEDED">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:background="@mipmap/action_bar"
        android:layout_height="48dp">
        <RelativeLayout
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/back"
                android:background="@drawable/btn_back_selector"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="17dp"
                android:layout_height="21dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/arearedact"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:text="@string/btn_delete"
            android:textColor="@animator/btn_delete_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:textSize="@dimen/topic_size"
            android:background="@null"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/areaname"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textColor="#333333"
            android:textSize="@dimen/text_size"
            android:id="@+id/textView2" />
        <View
            android:layout_width="1dp"
            android:background="#EDEDED"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/areaname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:hint="@string/add_area"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="33dp">
        <ImageView
            android:layout_width="10dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:layout_height="18dp"
            android:background="@mipmap/sjx_left_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/topic_size"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/initial"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:text="@string/pointx"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <TextView
                android:id="@+id/pointx"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:gravity="center"
                android:background="@null"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:inputType="numberSigned|numberDecimal"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EDEDED"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/pointy"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <TextView
                android:id="@+id/pointy"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:textSize="@dimen/text_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EDEDED"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:text="@string/moredesk"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <TextView
                android:id="@+id/moredesk"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="10dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:layout_height="18dp"
            android:background="@mipmap/sjx_left_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="@dimen/topic_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:text="@string/pointx"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <TextView
                android:id="@+id/pointx_area"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:background="@null"
                android:layout_height="match_parent"
                android:inputType="numberSigned|numberDecimal"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EDEDED"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/pointy"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <TextView
                android:id="@+id/pointy_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:inputType="numberSigned|numberDecimal"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EDEDED"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:text="@string/derection"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <TextView
                android:id="@+id/derection_area"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:textSize="@dimen/text_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberSigned|numberDecimal"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:layout_height="18dp"
            android:background="@mipmap/sjx_left_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/mapsetting"
            android:textColor="@color/black"
            android:textSize="@dimen/topic_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">
        <Button
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="@string/image"
            android:textSize="15sp"
            android:gravity="left|center"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:background="@mipmap/xyb"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:layout_height="18dp"
            android:background="@mipmap/sjx_left_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/mapshow"
            android:textColor="@color/black"
            android:textSize="@dimen/topic_size"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bitmap"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_height="200dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:background="@mipmap/action_bar"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="17sp"
            android:background="@null"
            android:textColor="@animator/btn_delete_selector"
            android:text="@string/btn_sure"
            android:layout_height="46dp" />
    </LinearLayout>
</LinearLayout>
