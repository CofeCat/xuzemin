<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@mipmap/action_bar">

        <RelativeLayout
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/back"
                android:layout_width="17dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_back_selector" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/robot_state"
            android:textColor="@color/white"
            android:textSize="17sp" />
        <RelativeLayout
            android:id="@+id/setting_redact_re"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/setting_redact"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_settings_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/name"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/ip"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/ip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/outline"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/outline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/electric"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/electric"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/ll_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/area"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/state"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/robot_state"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/robot_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/command_num"
                    android:textColor="@color/black"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/command_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/robot_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/goalname"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/goal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:id="@+id/robot_loop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="循环"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <Spinner
                    android:entries="@array/loop_number"
                    android:id="@+id/loop"
                    android:textStyle="normal|italic"
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/runtime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="运行时间"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/runtime_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:id="@+id/runouttime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="超时时间"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/runouttime_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/robot_turnback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/turnback"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/turnback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/robot_outtime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/outtime"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/outtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/last_location"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/last_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/obstacle"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/obstacle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="@string/pathway"
                    android:textColor="#333333"
                    android:textSize="@dimen/robot_size" />

                <TextView
                    android:id="@+id/pathway"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:textColor="#666666"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/linear_control"
                android:layout_width="match_parent"
                android:layout_height="@dimen/area_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/remote_control"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/action_bar"
                    android:text="@string/remote_control"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/robot_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
