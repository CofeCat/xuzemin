<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke" >

    <RelativeLayout
        android:id="@+id/rl_message_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/title_backgroud"
        android:minHeight="@dimen/title_hight"
        android:padding="@dimen/title_padding">
    	
        <ImageView 
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/global_back_btn_selector"
            />
        <TextView 
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image"
            android:text="饮食提醒"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_mid"/>
       
    </RelativeLayout>
    <LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_below="@+id/rl_message_top"
        	android:orientation="vertical"
        	android:layout_height="fill_parent">
		 <TextView 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:background="@color/light_gray"
        android:text="帮助你规律三餐，达到健康瘦身的效果~"
        android:textSize="20sp"
        android:textColor="@color/gray"
        />
        <RelativeLayout
            android:id="@+id/breakfast"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="80dp" >

            <TextView
                android:id="@+id/br"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="早餐贴士"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ToggleButton
                android:id="@+id/fa"
                style="@style/ToggleButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dp"
                android:background="@drawable/togglebutton_remind_sl"
                android:checked="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="07:20"
                android:textColor="@color/gray"
                android:textSize="20sp" />

        </RelativeLayout>
         <RelativeLayout
            android:id="@+id/lunch"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="80dp" >

            <TextView
                android:id="@+id/lu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="中餐贴士"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ToggleButton
                android:id="@+id/nc"
                style="@style/ToggleButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dp"
                android:background="@drawable/togglebutton_remind_sl"
                android:checked="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="12:20"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/supper"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="80dp" >

            <TextView
                android:id="@+id/su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="晚餐贴士"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ToggleButton
                android:id="@+id/pp"
                style="@style/ToggleButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dp"
                android:background="@drawable/togglebutton_remind_sl"
                android:checked="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/er"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="18:20"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </RelativeLayout>
         <TextView 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:background="@color/light_gray"
        android:text="帮助你忍住馋嘴，告诉你减肥小窍门~"
        android:textSize="20sp"
        android:textColor="@color/gray"
        />
         <RelativeLayout
            android:id="@+id/addeat"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="80dp" >

            <TextView
                android:id="@+id/ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="加餐提醒"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ToggleButton
                android:id="@+id/de"
                style="@style/ToggleButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dp"
                android:background="@drawable/togglebutton_remind_sl"
                android:checked="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="15:30"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>