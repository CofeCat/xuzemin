                   android:text="推荐我的"
                   android:textColor="@color/font_color"
                   android:textSize="18sp" />
           </RelativeLayout>

            <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:layout_marginLeft="60dp"
        	    android:background="@color/linec_color"/>

            <RelativeLayout
                android:id="@+id/fans"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/touch" >

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/fansadd"
                    android:contentDescription="@color/black"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/right_arrow"
                    android:contentDescription="@color/black" />

                <TextView
                    android:id="@+id/addfans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/imageView5"
                    android:background="@drawable/mess"
                    android:contentDescription="@color/black"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageView12"
                    android:text="新粉丝"
                    android:textColor="@color/font_color"
                    android:textSize="18sp" />
            </RelativeLayout>

             <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:background="@color/linec_color"/>
             <RelativeLayout 
        		android:layout_width="fill_parent"
        		android:layout_height="30dp"
        		android:background="@drawable/touch"/>
             <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:background="@color/linec_color"/>

             <RelativeLayout
                 android:id="@+id/nmbroat"
                 android:layout_width="fill_parent"
                 android:layout_height="40dp"
                 android:background="@drawable/touch">

                 <ImageView
                     android:id="@+id/imageView13"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="8dp"
                     android:background="@drawable/broat"
                     android:contentDescription="@color/black"
                     android:paddingLeft="5dp"
                     android:paddingTop="5dp" />

                 <ImageView
                     android:id="@+id/imageView6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="12dp"
                     android:background="@drawable/right_arrow"
                     android:contentDescription="@color/black" />

                 <TextView
                     android:id="@+id/addbroat"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="20dp"
                     android:layout_toLeftOf="@+id/imageView6"
                     android:background="@drawable/mess"
                     android:contentDescription="@color/black"
                     android:gravity="center"
                     android:text="5"
                     android:textColor="@color/white"
                     android:visibility="invisible" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="20dp"
                     android:layout_toRightOf="@+id/imageView13"
                     android:text="柠檬广播"
                     android:textColor="@color/font_color"
                     android:textSize="18sp" />
             </RelativeLayout>

          <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:layout_marginLeft="60dp"
        	    android:background="@color/linec_color"/>

          <RelativeLayout
              android:id="@+id/clock"
              android:layout_width="fill_parent"
              android:layout_height="40dp"
              android:background="@drawable/touch" >

              <ImageView
                  android:id="@+id/imageView14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:background="@drawable/alarm"
                  android:contentDescription="@color/black"
                  android:paddingLeft="5dp"
                  android:paddingTop="5dp" />

              <ImageView
                  android:id="@+id/imageView7"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="12dp"
                  android:background="@drawable/right_arrow"
                  android:contentDescription="@color/black" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="20dp"
                  android:layout_toRightOf="@+id/imageView14"
                  android:text="柠檬提醒"
                  android:textColor="@color/font_color"
                  android:textSize="18sp" />
          </RelativeLayout>

          <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:background="@color/linec_color"/>
    </LinearLayout>

</RelativeLayout>