<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke" >

    <RelativeLayout
        android:id="@+id/rl_message_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/title_backgroud"
        android:minHeight="@dimen/title_hight"
        android:padding="@dimen/title_padding">
    	
        <ImageView 
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/global_back_btn_selector"
            />
        <TextView 
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image"
            android:text="消息"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_mid"/>
        
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="全部已读"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_mid"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/have"
        android:layout_below="@+id/rl_message_top"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/whitesmoke"
        android:orientation="vertical"
        >
        <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/light_gray"/>

        <RelativeLayout
            android:id="@+id/getzam"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/touch"
            android:clickable="true" >

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/lemon3"
                android:contentDescription="@color/black"
                android:paddingLeft="5dp"
                android:paddingTop="5dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/right_arrow"
                android:contentDescription="@color/black" />

            <TextView
                android:id="@+id/getzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/imageView1"
                android:background="@drawable/mess"
                android:contentDescription="@color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imageView8"
                android:background="@drawable/touch"
                android:text="收到钻石"
                android:textColor="@color/font_color"
                android:textSize="18sp" />

        </RelativeLayout>

         <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:layout_marginLeft="60dp"
        	    android:background="@color/linec_color"/>

         <RelativeLayout
             android:id="@+id/withme"
             android:layout_width="fill_parent"
             android:layout_height="40dp"
			 android:background="@drawable/touch"              >

             <ImageView
                 android:id="@+id/imageView9"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="8dp"
                 android:background="@drawable/at"
                 android:contentDescription="@color/black"
                 android:paddingLeft="5dp"
                 android:paddingTop="5dp" />

             <ImageView
                 android:id="@+id/imageView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="12dp"
                 android:background="@drawable/right_arrow"
                 android:contentDescription="@color/black" />

             <TextView
                 android:id="@+id/getwithme"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="20dp"
                 android:layout_toLeftOf="@+id/imageView2"
                 android:background="@drawable/mess"
                 android:contentDescription="@color/black"
                 android:visibility="invisible" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="20dp"
                 android:layout_toRightOf="@+id/imageView9"
                 android:text="与我相关"
                 android:textColor="@color/font_color"
                 android:textSize="18sp" />
         </RelativeLayout>

          <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:layout_marginLeft="60dp"
        	    android:background="@color/linec_color"/>

          <RelativeLayout
              android:id="@+id/tome"
              android:layout_width="fill_parent"
              android:layout_height="40dp"
              android:background="@drawable/touch"
               >

              <ImageView
                  android:id="@+id/imageView10"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:background="@drawable/message"
                  android:contentDescription="@color/black"
                  android:paddingLeft="5dp"
                  android:paddingTop="5dp" />

              <ImageView
                  android:id="@+id/imageView3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="12dp"
                  android:background="@drawable/right_arrow"
                  android:contentDescription="@color/black" />

              <TextView
                  android:id="@+id/talkme"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="20dp"
                  android:layout_toLeftOf="@+id/imageView3"
                  android:background="@drawable/mess"
                  android:contentDescription="@color/black"
                  android:visibility="invisible" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="20dp"
                  android:layout_toRightOf="@+id/imageView10"
                  android:text="评论我的"
                  android:textColor="@color/black"
                  android:textSize="18sp" />
          </RelativeLayout>

           <View 
        	    android:layout_width="fill_parent"
        	    android:layout_height="0.3dp"
        	    android:layout_marginLeft="60dp"
        	    android:background="@color/linec_color"/>

           <RelativeLayout
               android:id="@+id/recommended"
               android:layout_width="fill_parent"
               android:layout_height="40dp"
               android:background="@drawable/touch" >

               <ImageView
                   android:id="@+id/imageView11"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="8dp"
                   android:background="@drawable/set"
                   android:contentDescription="@color/black"
                   android:paddingLeft="5dp"
                   android:paddingTop="5dp" />

               <ImageView
                   android:id="@+id/imageView4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="12dp"
                   android:background="@drawable/right_arrow"
                   android:contentDescription="@color/black" />

               <TextView
                   android:id="@+id/recomde"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="20dp"
                   android:layout_toLeftOf="@+id/imageView4"
                   android:background="@drawable/mess"
                   android:contentDescription="@color/black"
                   android:visibility="invisible" />

               <TextView
                   android:layout_width="wrap_content"
