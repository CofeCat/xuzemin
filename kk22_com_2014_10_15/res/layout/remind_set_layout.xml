<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_message_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/title_backgroud"
        android:minHeight="@dimen/title_hight"
        android:padding="@dimen/title_padding">
    	
        <ImageView 
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/global_back_btn_selector"
            />
        <TextView 
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image"
            android:text="柠檬提醒"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_mid"/>
        
    </RelativeLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:background="@color/light_gray"
        android:textColor="@color/gray"
        android:text="预设的时间不合适？可点击编辑哦~"
        android:textSize="20sp"
        />
    <View 
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
    <RelativeLayout 
        android:id="@+id/mo"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        >
        <TextView 
            android:id="@+id/morn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="早安提醒"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/morn"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/morn"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/mori"
            android:text="每天   08:00"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <ToggleButton
        android:id="@+id/mori"
        style="@style/ToggleButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/togglebutton_remind_sl"
        android:checked="false"
        android:focusable="false" />
    </RelativeLayout>
     <View 
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
     <RelativeLayout 
         android:id="@+id/ea"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        >
        <TextView 
            android:id="@+id/eat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饮食提醒"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/eating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eat"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/eat"
            android:layout_marginTop="3dp"
            android:textColor="@color/gray"
            android:layout_toLeftOf="@+id/eati"
            android:text="每天   15:00"
            android:textSize="15sp" />

        <ToggleButton
        android:id="@+id/eati"
        style="@style/ToggleButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/togglebutton_remind_sl"
        android:checked="false"
        android:focusable="false" />
    </RelativeLayout>
     <View 
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
     <RelativeLayout 
         android:id="@+id/ru"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        >
        <TextView 
            android:id="@+id/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动提醒"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/runing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/run"
            android:textColor="@color/gray"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/run"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/runi"
            android:text="每天   08:00"
            android:textSize="15sp" />

        <ToggleButton
        android:id="@+id/runi"
        style="@style/ToggleButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/togglebutton_remind_sl"
        android:checked="false"
        android:focusable="false" />
    </RelativeLayout>
     <View 
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
     <RelativeLayout 
         android:id="@+id/drin"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        >
        <TextView 
            android:id="@+id/drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喝水提醒"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/drinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/drink"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/drink"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/drinki"
            android:text="每天   08:00"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <ToggleButton
        android:id="@+id/drinki"
        style="@style/ToggleButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/togglebutton_remind_sl"
        android:checked="false"
        android:focusable="false" />
    </RelativeLayout>
     <View 
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
     <View 
        android:layout_width="fill_parent"
        android:layout_height="30dp"/>
     <View 
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
     <RelativeLayout 
         android:id="@+id/emai"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:src = "@drawable/touch"
        android:background="@drawable/touch"
        >
        <TextView 
            android:id="@+id/email"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件箱"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/emailing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/email"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:text="提醒的邮件在这里"
            android:textSize="20sp" />

    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
     
</LinearLayout>