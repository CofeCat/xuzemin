<resources>

    <!--
         Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="Widget.GifMoviewView" parent="@android:style/Widget"></style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.splash" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="exit_dialogbg" parent="@android:style/Theme.Dialog">

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MainTabStyle">
        <item name="android:textSize">10.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">30.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="LeftInLeftOut" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/LeftInLeftOut_anim</item>
    </style>

    <style name="RightInRightOut" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/RightInRightOut_anim</item>
    </style>

    <style name="DownInDownOut" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DownInDownOut_anim</item>
    </style>

    <style name="RightInRightOut_anim" parent="@android:style/Theme.NoTitleBar">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="LeftInLeftOut_anim" parent="@android:style/Theme.NoTitleBar">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="DownInDownOut_anim" parent="@android:style/Theme.NoTitleBar">
        <item name="android:activityOpenEnterAnimation">@anim/down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/down_out</item>
    </style>

    <style name="PullToRefreshListViewStyle">
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/timeline_divider</item>
        <item name="android:dividerHeight">1.5dip</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="LossWeightQuestionListViewStyle">
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">#F6F6F6</item>
        <item name="android:dividerHeight">10dip</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="FriendRoomListViewStyle">
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="OrderItemStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/cell_height</item>
    </style>

    <style name="GlobalBuyBtn">
        <item name="android:textSize">@dimen/main_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/uchoice_main_btn_selector</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:button">@null</item>
    </style>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/white</item>
    </style>
	<style name="ToggleButtonStyle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>
</resources>