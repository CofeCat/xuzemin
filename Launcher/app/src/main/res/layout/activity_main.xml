<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/shipin"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/shape_video"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/shipin" />
            <TextView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/video"
                android:textSize="@dimen/text_size"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_marginLeft="@dimen/desire"
            android:orientation="vertical"
            android:layout_height="300dp">
            <RelativeLayout
                android:id="@+id/news_layout"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="145dp"
                android:orientation="vertical"
                android:background="@drawable/shape_news"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@mipmap/news"/>
                </RelativeLayout>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:text="@string/news"
                    android:textSize="@dimen/text_size"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_marginTop="@dimen/desire"
                android:orientation="horizontal"
                android:layout_height="150dp">
                <RelativeLayout
                    android:id="@+id/message_layout"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_message"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@mipmap/zixun"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:text="@string/message"
                        android:gravity="center"
                        android:textSize="@dimen/text_size"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/contact"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="145dp"
                    android:layout_marginLeft="@dimen/desire"
                    android:layout_height="145dp"
                    android:orientation="vertical"
                    android:background="@drawable/constact"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@mipmap/shejiao"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:text="@string/social_contact"
                        android:textSize="@dimen/text_size"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_marginLeft="@dimen/desire"
            android:orientation="vertical"
            android:layout_height="300dp">
            <RelativeLayout
                android:id="@+id/settings"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:orientation="vertical"
                android:background="@drawable/shape_settings"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@mipmap/shezhi"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:text="@string/settings"
                    android:textSize="@dimen/text_size"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/play"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_width="145dp"
                android:layout_marginTop="@dimen/desire"
                android:layout_height="145dp"
                android:orientation="vertical"
                android:background="@drawable/shape_play"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@mipmap/googleplay"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:text="@string/google_play"
                    android:textSize="@dimen/text_size"
                    android:gravity="center"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="60dp">
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/layout_left"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_settings_selector"
            />
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_left"
                android:layout_height="match_parent"
                android:background="@mipmap/logo_qiy"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="@dimen/layout_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/layout_bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_title"
                    android:layout_height="@dimen/layout_height">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/news"
                        android:layout_marginLeft="@dimen/layout_left"
                        android:textColor="@color/black"
                        android:textSize="@dimen/layout_textSize" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/relayout_top"
                    android:background="@drawable/shape_corner"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/bbc"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_bbc"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_bbc" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/bbc"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cnn"
                        android:layout_toRightOf="@+id/bbc"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_cnn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_cnn" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/ccn"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/google"
                        android:layout_below="@+id/bbc"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_google"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_googlenews" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/google_news"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/economist"
                        android:layout_toRightOf="@+id/google"
                        android:layout_below="@+id/cnn"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_economist"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_economist" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/economist"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_left"
                android:layout_marginBottom="@dimen/layout_bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_title"
                    android:layout_height="@dimen/layout_height">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/video"
                        android:layout_marginLeft="@dimen/layout_left"
                        android:textColor="@color/black"
                        android:textSize="@dimen/layout_textSize" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/relayout_top"
                    android:background="@drawable/shape_corner"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/spotify"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_spotify"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_spotify" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/logo_spotify"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/youku"
                        android:layout_toRightOf="@+id/spotify"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_youku"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_youku" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/logo_youku"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iqy"
                        android:layout_below="@+id/spotify"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_iqy"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_qiy" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/logo_qiy"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/youtube"
                        android:layout_toRightOf="@+id/iqy"
                        android:layout_below="@+id/youku"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_youtube"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_youtube" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/logo_youtube"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_left"
                android:layout_marginBottom="@dimen/layout_bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_title"
                    android:layout_height="@dimen/layout_height">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/news"
                        android:layout_marginLeft="@dimen/layout_left"
                        android:textColor="@color/black"
                        android:textSize="@dimen/layout_textSize" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/relayout_top"
                    android:background="@drawable/shape_corner"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/weibo"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_weibo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_weibo" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/logo_weibo"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/facebook"
                        android:layout_toRightOf="@+id/weibo"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_fb"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_fb" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/fb"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/instagram"
                        android:layout_below="@+id/weibo"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_ig"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_ig" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/logo_ig"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twitter"
                        android:layout_toRightOf="@+id/instagram"
                        android:layout_below="@+id/facebook"
                        android:layout_width="@dimen/relayout_wid"
                        android:layout_height="250dp"
                        android:layout_marginLeft="@dimen/btn_left"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/btn_top">
                        <ImageView
                            android:id="@+id/btn_twitter"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/relayout_wid"
                            android:background="@mipmap/logo_twitter" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/logo_twitter"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="900dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_title"
                    android:layout_height="@dimen/layout_height">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/all"
                        android:layout_marginLeft="@dimen/layout_left"
                        android:textColor="@color/black"
                        android:textSize="@dimen/layout_textSize" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_corner"
                    android:layout_marginTop="@dimen/relayout_top"
                    android:layout_marginBottom="@dimen/layout_bottom"
                    android:layout_height="match_parent">
                    <GridView
                        android:id="@+id/all_content"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:numColumns="6"
                        android:verticalSpacing="15dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/layout_left"
                android:layout_height="match_parent"
                android:background="@mipmap/logo_qiy"
                android:visibility="invisible" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout >