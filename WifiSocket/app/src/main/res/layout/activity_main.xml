<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/shape_no_corner_without_bottom"
    >

    <Button
        android:id="@+id/wifi"
        style="@style/corner_all"
        android:background="@drawable/shape_bottom_corner_no_top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wifi" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        style="@style/corner_all"
        android:background="@drawable/shape_bottom_corner_no_top_line"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启wifi"
            android:layout_centerVertical="true"
            style="@style/corner_all"
            android:textSize="@dimen/wifi_list_size"/>

        <Switch
            style="@style/corner_all"
            android:id="@+id/wifistate"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/wifi_list_size_top"
        style="@style/corner_all"
        android:layout_height="wrap_content">
        <TextView
            style="@style/corner_all"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wifi_list_size"
            android:text="@string/wifi_list"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/corner_all"
        android:id="@+id/conntect_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/textview"
            style="@style/corner_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_wifi"
            android:textSize="@dimen/wifi_list_text_top"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_below="@+id/textview"
            android:textColor="@color/black"
            android:textSize="@dimen/wifi_list_item_size"
            style="@style/corner_all"
            android:id="@+id/connected_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/corner_all"
        android:layout_marginTop="@dimen/wifi_list_size_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2px"
            style="@style/corner_all"
            />
    </RelativeLayout>

</LinearLayout>
