<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#EDEDED"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main"
        android:background="@mipmap/action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/back"
                android:background="@drawable/btn_back_selector"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="17dp"
                android:layout_height="21dp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="@string/coordinate"
            />
        <Button
            android:background="@null"
            android:textColor="@animator/btn_delete_selector"
            android:id="@+id/btn_sure"
            android:textSize="@dimen/topic_size"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:text="@string/btn_sure"
            tools:ignore="RelativeOverlap,RtlHardcoded" />
    </RelativeLayout>
        <com.android.zbrobot.view.CoordinateView
            android:id="@+id/coordinate"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:layout_height="18dp"
            android:background="@mipmap/sjx_left_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/goal"
            android:textColor="@color/black"
            android:textSize="@dimen/topic_size" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_height="45dp">
        <ToggleButton
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:background="@null"
            android:button="@drawable/btn_choose_map_selector"
            android:checked="false"
            android:textSize="@dimen/text_size"
            android:gravity="left|center"
            android:text="@string/map"
            android:layout_weight="2"
            android:textOff="@string/map"
            android:textOn="@string/map"
            />

        <TextView
            android:id="@+id/text_toast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/map_toast"
            android:background="@null"
            android:textColor="#999999" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="@string/pointx"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size"
                    tools:ignore="NestedWeights" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"/>
                <EditText
                    android:id="@+id/pointx"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:hint="@string/point_hint"
                    android:textSize="@dimen/text_size"
                    android:background="@color/white"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned|numberDecimal"
                    android:text="" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/pointy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size"
                    tools:ignore="NestedWeights" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"/>
                <EditText
                    android:id="@+id/pointy"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size"
                    android:hint="@string/point_hint"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned|numberDecimal"
                    android:text="" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EDEDED"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/derection"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size"
                    tools:ignore="NestedWeights" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"/>
                <EditText
                    android:id="@+id/derection"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size"
                    android:hint="@string/direction_hint"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/derectionchoose"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="1dp"
                        android:background="#EDEDED"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/up"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size"
                        />
                    <View
                        android:layout_width="1dp"
                        android:background="#EDEDED"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/down"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/down"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="1dp"
                        android:background="#EDEDED"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/left"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size"/>
                    <View
                        android:layout_width="1dp"
                        android:background="#EDEDED"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/right"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/right"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/waittime"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                />
            <View
                android:layout_width="1dp"
                android:background="#EDEDED"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/waittime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/waittime_hint"
                android:background="@color/white"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>