<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >
	<android.support.v4.view.ViewPager
		android:id="@+id/kernel_viewpager"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:background="#FFFFFF"/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"
		android:orientation="horizontal">
		<View
			android:id="@+id/view_dot_one_welcome"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:layout_margin="5dp"
			android:background="@drawable/welcome_dot_normal"/>
		<View
			android:id="@+id/view_dot_two_welcome"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:layout_margin="5dp"
			android:background="@drawable/welcome_dot_press"/>
		<View
			android:id="@+id/view_dot_three_welcome"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:layout_margin="5dp"
			android:background="@drawable/welcome_dot_press"/>
		<View
           android:id="@+id/view_dot_four_welcome"
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:layout_margin="5dp"
           android:background="@drawable/welcome_dot_press"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:background="@color/white"
		android:layout_height="80dp">
		<Button
			android:id="@+id/_btn_1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:button="@null"
			android:drawableTop="@drawable/tab1_select"
			android:gravity="center"
			android:onClick="doClick"
			android:layout_gravity="center_vertical"
			android:text="@string/tab_one"
			android:textColor="@drawable/tab_text_color_selector"
			android:textSize="@dimen/tab_text_size"
			android:textStyle="bold" />
		<Button
			android:id="@+id/_btn_2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:button="@null"
			android:drawableTop="@drawable/tab1_select"
			android:gravity="center"
			android:onClick="doClick"
			android:layout_gravity="center_vertical"
			android:text="@string/tab_one"
			android:textColor="@drawable/tab_text_color_selector"
			android:textSize="@dimen/tab_text_size"
			android:textStyle="bold" />
		<Button
			android:id="@+id/_btn_3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:button="@null"
			android:drawableTop="@drawable/tab1_select"
			android:gravity="center"
			android:onClick="doClick"
			android:layout_gravity="center_vertical"
			android:text="@string/tab_one"
			android:textColor="@drawable/tab_text_color_selector"
			android:textSize="@dimen/tab_text_size"
			android:textStyle="bold" />
		<Button
			android:id="@+id/_btn_4"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:button="@null"
			android:drawableTop="@drawable/tab1_select"
			android:gravity="center"
			android:onClick="doClick"
			android:layout_gravity="center_vertical"
			android:text="@string/tab_one"
			android:textColor="@drawable/tab_text_color_selector"
			android:textSize="@dimen/tab_text_size"
			android:textStyle="bold" />
	</LinearLayout>
	<GridView
		android:id="@+id/gview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:numColumns="auto_fit"
		android:columnWidth="113dp"

		/>
</LinearLayout>