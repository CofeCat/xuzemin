<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="211px"
    android:layout_height="118px"
    android:orientation="vertical"
    android:background="@mipmap/zuobiao"
    >
    <TextView
        android:layout_marginTop="10px"
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="x"
            />
        <ImageButton
            android:layout_marginLeft="12px"
            android:id="@+id/point_x_subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jian"/>
        <TextView
            android:layout_marginLeft="5px"
            android:id="@+id/change_number_xs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@mipmap/wenzikuangmap"
            />
        <ImageButton
            android:layout_marginLeft="5px"
            android:id="@+id/point_x_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jia"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="y"
            />
        <ImageButton
            android:layout_marginLeft="12px"
            android:id="@+id/point_y_subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jian"/>
        <TextView
            android:layout_marginLeft="5px"
            android:id="@+id/change_number_ys"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@mipmap/wenzikuangmap"
            android:layout_height="wrap_content"
            />
        <ImageButton
            android:layout_marginLeft="5px"
            android:id="@+id/point_y_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jia"/>
    </LinearLayout>
</LinearLayout>