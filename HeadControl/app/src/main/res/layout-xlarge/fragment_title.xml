<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/btn_true"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_Exit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@color/btn_true"
                >
                <ImageView
                    android:id="@+id/iv_Exit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="8dp"
                    android:clickable="true"
                    android:src="@mipmap/tuichu"/>
                <TextView
                    android:id="@+id/tv_Exit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="设置"
                    android:textSize="12.0sp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/rl_Battery"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:clickable="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:background="@color/btn_true"
                >
                <ImageView
                    android:id="@+id/iv_Battery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:src="@mipmap/dianyuan_per" />
                <TextView
                    android:id="@+id/tv_Battery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="电源"
                    android:textColor="@color/left_text_color"
                    android:textSize="11.0sp" />
                <ImageView
                    android:id="@+id/iv_Battery_you"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:src="@mipmap/you_per" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/rl_Clean"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:clickable="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:background="@drawable/btn_background"
                >

                <ImageView
                    android:id="@+id/iv_Clean"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:src="@mipmap/qingjie_no"
                    />

                <TextView
                    android:id="@+id/tv_Clean"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="清洁"
                    android:textColor="@color/left_text_color"
                    android:textSize="11.0sp" />
                <ImageView
                    android:id="@+id/iv_Clean_you"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:src="@mipmap/you_no"  />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/rl_Map"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:clickable="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:background="@drawable/btn_background"
                >
                <ImageView
                    android:id="@+id/iv_Map"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:src="@mipmap/qingjie_no"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/tv_Map"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:text="地图"
                    android:textColor="@color/left_text_color"
                    android:textSize="11.0sp" />
                <ImageView
                    android:id="@+id/iv_Map_you"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:src="@mipmap/you_no"  />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>