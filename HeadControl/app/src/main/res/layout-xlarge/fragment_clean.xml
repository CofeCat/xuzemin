<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tyre="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_Clean_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_Clean_Top"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/right_title_background_color"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/right_title_background_color"
                    android:textColor="@color/white"
                    android:text="清洁配置信息"
                    android:textSize="36sp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_Clean_Save"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_save_background"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Clean_Bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="@mipmap/bg05"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清洁时间设置"
                        android:textSize="36sp"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>
                <!--存放添加时间列表-->
                <!--第一组时间-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="26dp"
                    android:gravity="center_vertical"
                    android:background="@mipmap/kuang">
                        <TextView
                            android:id="@+id/tv_Clean_Start_Hour1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="233dp"
                            android:textColor="@color/white"
                            android:text="08"
                            android:textSize="30sp"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_Start1"
                            android:layout_toRightOf="@+id/tv_Clean_Start_Hour1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text=":"
                            android:textSize="30sp"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_Clean_Start_Minute1"
                            android:layout_toRightOf="@+id/tv_Start1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="00"
                            android:textSize="30sp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/tv_Clean_End_Hour1"
                            android:layout_toRightOf="@+id/tv_Clean_Start_Minute1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:textColor="@color/white"
                            android:text="09"
                            android:textSize="30sp"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_End_maohao1"
                            android:layout_toRightOf="@+id/tv_Clean_End_Hour1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text=":"
                            android:textSize="30sp"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_Clean_End_Minute1"
                            android:layout_toRightOf="@+id/tv_End_maohao1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="00"
                            android:textSize="30sp"
                            android:layout_marginTop="10dp"
                            />

                        <ImageView
                            android:id="@+id/iv_Clean_bianji1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_toLeftOf="@+id/fl_FrameLayout"
                            android:src="@mipmap/bianji_no"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="10dp"
                            />
                        <FrameLayout
                            android:id="@+id/fl_FrameLayout"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                            android:id="@+id/iv_Clean_Switch_Open"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@mipmap/kai"
                            />
                            <ImageView
                                android:id="@+id/iv_Clean_Switch_Close"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/guang"
                                android:scaleType="fitXY"
                                android:visibility="gone"
                                />
                        </FrameLayout>
                    </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/bg05"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清洁类型"
                        android:textSize="36sp"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="20dp"
                        android:background="@mipmap/xuanzebeijing_clean"
                        >
                        <ImageView
                            android:id="@+id/iv_Clean_yaguang_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@mipmap/yaguang_no"/>
                        <ImageView
                            android:id="@+id/iv_Clean_yaguang_per"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@mipmap/yaguang_per"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="20dp"
                        android:background="@mipmap/xuanzebeijing_clean">
                        <ImageView
                            android:id="@+id/iv_Clean_biaozhun_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@mipmap/biaozhun_no"/>
                        <ImageView
                            android:id="@+id/iv_Clean_biaozhun_per"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@mipmap/biaozhun_per"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="20dp"
                        android:background="@mipmap/xuanzebeijing_clean">
                        <ImageView
                            android:id="@+id/iv_Clean_liangguang_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@mipmap/liangguang_no"/>
                        <ImageView
                            android:id="@+id/iv_Clean_liangguang_per"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@mipmap/liangguang_per"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>
                </LinearLayout>
            <!--<LinearLayout-->
                <!--android:layout_width="400dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:orientation="horizontal">-->
                <!--<RelativeLayout-->
                    <!--android:layout_width="200dp"-->
                    <!--android:layout_height="100dp">-->
                    <!--<include layout="@layout/custom_timepicker_start"></include>-->
                <!--</RelativeLayout>-->
                <!--<RelativeLayout-->
                    <!--android:layout_width="200dp"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:layout_marginLeft="10dp">-->
                    <!--<include layout="@layout/custom_timepicker_end"></include>-->
                <!--</RelativeLayout>-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>